<header>
  <h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %>
  <form>
    <ul>
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, required: true %>
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, required: true %>
    </ul>
    <p>
      <%= submit_tag 'Sign In', class: 'button success' %>
      <%= link_to "Cancel", root_url, class: 'alert button' %>
    </p>
  </form>
<% end %>
