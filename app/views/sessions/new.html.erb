<header>
  <h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %>
  <fieldset>
    <ul>
      <li>
        <%= label_tag :email %>
        <%= email_field_tag :email, nil %>
      </li>
      <li>
        <%= label_tag :password %>
        <%= password_field_tag :password, nil %>
      </li>
    </ul>
    <p>
      <%= submit_tag 'Sign In' %>
    </p>
  </fieldset>
<% end %>
