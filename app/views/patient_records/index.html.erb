<div class="container">
  <div class="row">

    <header class="display-12"> 
      <h2>All Patients</h2>
      <hr>
    </header>

    <!-- <div class="col-md-12"> -->
    <div class="table-responsive">
  	  <table class="table table-hover" style="text-align: center;">
  	  	<thead>
  	  	  <tr>
  	  	    <th scope="col" >Patient ID</th>
  	  	    <th scope="col" style="text-align: center;">User Account Exists?</th>
  	  	    <th scope="col" style="text-align: center;">First Name</th>
  	  	    <th scope="col" style="text-align: center;">Last Name</th>
  	  	    <th scope="col" style="text-align: center;">Phone Number</th>
  	  	    <th scope="col" style="text-align: center;">Email Address</th>
  	  	  </tr>
  	  	</thead>
  	  	<tbody>
          <% @records.each do |record| %>
  	  	    <tr>
  	  	      <th scope="row"><%= record.id %></th>
  	  	      <td><%= display_tick(record) %></td>
  	  	      <td><%= record.first_name %></td>
  	  	      <td><%= record.last_name %></td>
  	  	      <td><%= record.phone_number %></td>
  	  	      <td><%= record.email %></td>
  	  	    </tr>
          <% end %>
  	  	</tbody>
		  </table> 
    </div>

  </div>
</div>




