<% if object.errors.any? %>
<section>
  <h3>The <%= object.class.name.titleize.downcase %> could not be saved.</h3>
  <h3>Please correct the following <%= pluralize(object.errors.count, 'error') %>:</h3>
  <ul>
    <% object.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</section>
<% end %>
