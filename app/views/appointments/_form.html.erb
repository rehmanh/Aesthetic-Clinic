<header class="container fullwidth heading">
  <h1>Schedule An Appointment</h1>
</header>

<%= form_for(@appointment) do |f| %>
  <%= render "shared/errors", object: @appointment %>
  <form>
    <div class="form-group">
      <%= f.label :appointment_date_time, nil, class: 'fullwidth' %><br>
      <%= f.datetime_select :appointment_date_time, ampm: true, class: 'fullwidth' %>
    </div>
    <div class="form-group">
      <%= f.label :location, nil, class: 'fullwidth' %><br>
      <%= f.select :location, ['National Medical Center', 'Arif Medical Center'], :prompt => 'Select location', class: 'form-control fullwidth' %>
    </div>
    <div class="form-group">
      <%= f.label :complaint, nil, class: 'fullwidth' %><br>
      <%= f.text_area :complaint, cols: 40, rows: 7, class: 'fullwidth' %>
    </div>
    <%= f.submit "Schedule Appointment", class: 'btn btn-primary fullwidth' %>
  </form>
<% end %>

       
